@model PlaySports.Application.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Entrar";
}

<div class="container my-4">
    <div class="d-flex justify-content-center align-items-center">
        <center>
            <a><img src="~/images/favicon.png"> </a>
        </center>
    </div>
</div>
<div class="container">
    <div class="row no-gutters">
        <div class="col-12 col-lg-4 offset-lg-4">
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" asp-for="ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Login" class="col-form-label text-uppercase"></label>
                    <input asp-for="Login" class="form-control form-control-lg" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="col-form-label text-uppercase"></label>
                    <input asp-for="Senha" class="form-control form-control-lg" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Create" asp-controller="User" class="text-uppercase">Registrar-se</a>
                </div>
                <button class="btn btn-primary btn-lg btn-block text-uppercase" type="submit">Entrar</button>
            </form>
        </div>
    </div>
</div>