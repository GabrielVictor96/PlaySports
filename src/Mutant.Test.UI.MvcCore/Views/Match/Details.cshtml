@model PlaySports.Application.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Detalhes";
}


<div class="container">
    <div class="jumbotron d-flex flex-wrap flex-row align-items-start justify-content-between">
        <h1 class="text-uppercase text-dark font-weight-bold">@Html.DisplayFor(model => model.Nome)</h1>
        <a asp-controller="Nota" asp-action="Index" asp-route-id="@ViewBag.Nome" class="btn btn-lg btn-primary text-uppercase">Ver últimas atividades</a>
    </div>
</div>

<div class="post-content">
        <style>
            img {
                max-width: 30%;
                height: auto;
            }
        </style>
        <dl class="container">
            <dt class="text-uppercase">@Html.DisplayNameFor(model => model.Imagem)</dt>
        </dl>
        <img src="@ViewBag.DadosImagem">   
</div>


<div class="container">
    <dl class="">
        <dt class="text-uppercase">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="text-uppercase">@Html.DisplayNameFor(model => model.Sexo)</dt>
        <dd>@Html.DisplayFor(model => model.Sexo)</dd>

        <dt class="text-uppercase">Idade</dt>
        <dd>@ViewBag.Idade</dd>

        <dt class="text-uppercase">@Html.DisplayNameFor(model => model.Esporte)</dt>
        <dd>@Html.DisplayFor(model => model.Esporte)</dd>

        <dt class="text-uppercase">@Html.DisplayNameFor(model => model.Nivel)</dt>
        <dd>@Html.DisplayFor(model => model.Nivel)</dd>

        <dt class="text-uppercase">@Html.DisplayNameFor(model => model.Localizacao)</dt>
        <dd>@Html.DisplayFor(model => model.Localizacao)</dd>
    </dl>
    
    <a asp-action="Curtir" class="btn btn-primary text-uppercase">Curtir</a>
    <a asp-action="Index" class="btn btn-link text-uppercase">Voltar</a>
</div>

